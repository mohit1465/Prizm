{
  "name": "prizm-browser",
  "version": "1.0.0-beta.7",
  "description": "A minimal desktop web browser built with Electron.",
  "main": "main.js",
  "license": "MIT",
  "author": "",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder --win",
    "build:exe": "node build-simple.js",
    "build:portable": "electron-builder --win portable",
    "pack:win": "npx electron-packager . Prizm --platform=win32 --arch=x64 --icon=assets/Prizm_Logo.ico --out=dist --overwrite --app-version=1.0.0 --app-copyright=Copyright (c) 2025 PrimeX",
    "mobile": "node server.js",
    "build:apk": "build-apk.bat",
    "sync:android": "npx cap sync android"
  },
  "dependencies": {
    "@capacitor/android": "^7.4.2",
    "@capacitor/app": "^7.0.2",
    "@capacitor/browser": "^7.0.2",
    "@capacitor/cli": "^7.4.2",
    "@capacitor/core": "^7.4.2",
    "@capacitor/status-bar": "^7.0.2",
    "electron-log": "^5.1.0",
    "electron-updater": "^6.6.2"
  },
  "devDependencies": {
    "electron": "^38.0.0",
    "electron-builder": "^24.13.3",
    "electron-packager": "^17.1.2",
    "electron-squirrel-startup": "^1.0.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Mohit1465/Prizm.git"
  },
  "build": {
    "appId": "com.example.Prizm",
    "productName": "Prizm",
    "artifactName": "${productName}.Setup.${version}.${ext}",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme,test,__tests__}",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!node_modules/.cache/**"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/Prizm_Logo.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "runAfterFinish": true
    },
    "mac": {
      "target": "dmg",
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility"
    }
  }
}
